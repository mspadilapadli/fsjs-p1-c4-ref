<!doctype html>
<html lang="en">

<head>
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <title>Songs Labels</title>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
   <div class="container">
      <form action="/songs/add" method="post">
         <div class="mb-3">
            <label>
               Title
            </label>
            <input type="text" class="form-control" name="title">
         </div>
         <div class="mb-3">
            <label>Band Name</label>
            <input type="text" class="form-control" name="bandName">
         </div>
         <div class="mb-3">
            <label>Duration</label>
            <input type="number" class="form-control" name="duration">
         </div>
         <div class="mb-3">
            <label>Genre</label>
            <select class="form-control" name="genre">
               <option value="undifined">--Select--</option>
               <option value="Rock">Rock</option>
               <option value="Pop">Pop</option>
               <option value="Dangdut">Dangdut</option>
               <option value="Jazz">Jazz</option>
               <option value="Other">Other</option>
            </select>
         </div>
         <div class="mb-3">
            <label>Lyric</label>
            <input type="text" class="form-control" name="lyric">
         </div>
         <div class="mb-3">
            <label>Imgae</label>
            <input type="text" class="form-control" name="imageUrl">
         </div>
         <div class="mb-3">
            <label class="form-label">Label</label>
            <select class="form-select" aria-label="Default select example" name="labelId">
               <option value="--Select--">-Select-</option>
               <% listLabels.forEach((label)=>{ %>
                  <option value="<%= label.id%>">
                     <%=label.name %>
                  </option>
                  <% }) %>
            </select>
         </div>
         <div class="mb-3">
            <label>Create date</label>
            <input type="date" class="form-control" name="createdDate">
         </div>

         <button type="submit" class="btn btn-primary">Submit</button>
      </form>

   </div>



   </tbody>
   </table>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"></script>
</body>

</html>